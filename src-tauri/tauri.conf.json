{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "octapus-db",
  "version": "0.1.0",
  "identifier": "com.octapus-db.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "octapus-db",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/octapus-db.png",
      "icons/octapus-db.png",
      "icons/octapus-db.png",
      "icons/octapus-db.icns",
      "icons/octapus-db.ico"
    ]
  }
}
